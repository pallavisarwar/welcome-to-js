{
  "name": "welcome-to-js",
  "version": "1.0.0",
  "description": "examples, exercises and guides for the Welcome to JS module at HYF Belgium",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write ./",
    "format:check": "prettier --check ./",
    "spell-check": "cspell  \"./**\"",
