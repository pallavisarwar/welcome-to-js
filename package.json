    "eslint-config-prettier": "^8.8.0",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "markdownlint-cli": "^0.34.0",
    "prettier": "^2.8.8",
    "study-lenses": "^0.0.179"
